@using Core.Entities
@model IEnumerable<Supplier>
<table class="table table-bordered" id="suppliersTable">
    <thead>
        <tr>
            <th>
                Company Name
            </th>
            <th>
                Contact Name
            </th>
            <th>
                Address
            </th>
            <th>
                City
            </th>
            <th>
                State
            </th>
            <th>
                Postal Code
            </th>
            <th>
                Country
            </th>
            <th>
                Phone
            </th>
            <th>
                WebPage
            </th>
            <th>
                Edit
            </th>
            <th>
                Remove
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var entity in Model)
            {
        <tr>
            <td>
                @entity.CompanyName
            </td>
            <td>
                @entity.ContactName
            </td>
            <td>
                @entity.Address
            </td>
            <td>
                @entity.City
            </td>
            <td>
                @entity.State
            </td>
            <td>
                @entity.PostalCode
            </td>
            <td>
                @entity.Country
            </td>
            <td>
                @entity.Phone
            </td>
            <td>
                @entity.WebPage
            </td>
            <td text-right">
                <a onclick="jQueryModalGet('?handler=CreateOrEdit&id=@entity.Id','Edit Supplier')" class="btn btn-info text-white"> <i class="fa fa-edit"></i></a>
            </td>
            <td text-right">
                <form method="post" asp-page="Index" asp-route-id="@entity.Id" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                    <button type="submit" class="btn btn-danger text-white"> <i class="fa fa-trash"></i></button>
                </form>
            </td>
        </tr>
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#suppliersTable").DataTable();
    });
</script>