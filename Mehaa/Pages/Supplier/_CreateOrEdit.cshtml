@using Core.Entities
@model Supplier
<form id="create-form" method="post" asp-page="Index" asp-route-id="@Model.Id" asp-page-handler="CreateOrEdit" onsubmit="return jQueryModalPost(this);">
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Company Name</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="CompanyName" name="CompanyName" class="form-control">
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Contact Name</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="ContactName" name="ContactName" class="form-control">
            <span asp-validation-for="ContactName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Address</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="Address" name="Address" class="form-control">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">City</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="City" name="City" class="form-control">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">State</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="State" name="State" class="form-control">
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">PostalCode</label>
        <div class="col-md-9">
            <input type="number" autocomplete="off" asp-for="PostalCode" name="PostalCode" class="form-control">
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Country</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="Country" name="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Phone</label>
        <div class="col-md-9">
            <input type="tel" autocomplete="off" asp-for="Phone" name="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Web Page</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="WebPage" name="WebPage" class="form-control" />
            <span asp-validation-for="WebPage" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
        </div>
    </div>
    <div class="form-group justify-content-between">
        <button type="button" class="btn btn-secondary close-button" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary save-button">Save</button>
    </div>

</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>