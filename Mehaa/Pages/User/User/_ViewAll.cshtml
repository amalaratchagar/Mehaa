@using Core.Entities.User
@model IEnumerable<User>
<table class="table table-bordered" id="usersTable">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                User Name
            </th>
            <th>
                Email
            </th>
            <th>
                Mobile#
            </th>
            <th>
                Edit
            </th>
            <th>
                Remove
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var user in Model)
            {
        <tr>
            <td>
                @user.Name
            </td>
            <td>
                @user.LastName
            </td>
            <td>
                @user.UserName
            </td>
            <td>
                @user.Email
            </td>
            <td>
                @user.Mobile
            </td>
            <td text-right">
                <a onclick="jQueryModalGet('?handler=CreateOrEdit&id=@user.Id','Edit User')" class="btn btn-info text-white"> <i class="fa fa-edit"></i></a>
            </td>
            <td text-right">
                <form method="post" asp-page="Index" asp-route-id="@user.Id" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                    <button type="submit" class="btn btn-danger text-white"> <i class="fa fa-trash"></i></button>
                </form>
            </td>
        </tr>
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#usersTable").DataTable();
    });
</script>