@using Core.Entities.User
@model IEnumerable<UserPermission>
<table class="table table-bordered" id="userPermissionsTable">
    <thead>
        <tr>
            <th>
                User 
            </th>
            <th>
                Permission 
            </th>
            <th>
                Edit
            </th>
            <th>
                Remove
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var entity in Model)
            {
        <tr>
            <td>
                @entity.User.Name
            </td>
            <td>
                @entity.Permission.Name
            </td>
            <td text-right">
                <a onclick="jQueryModalGet('?handler=CreateOrEdit&id=@entity.Id','Edit User Permission')" class="btn btn-info text-white"> <i class="fa fa-edit"></i></a>
            </td>
            <td text-right">
                <form method="post" asp-page="Index" asp-route-id="@entity.Id" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                    <button type="submit" class="btn btn-danger text-white"> <i class="fa fa-trash"></i></button>
                </form>
            </td>
        </tr>
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#userPermissionsTable").DataTable();
    });
</script>